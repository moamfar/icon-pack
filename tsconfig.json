{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    // Declaration options - must be together
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,

    // Add these to fix the React type issues
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    // If you want to suppress the specific error
    "noImplicitAny": true
  },

  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/generated" // If you want to exclude generated files
  ]
}
